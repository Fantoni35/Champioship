            // $.getJSON('/Account/GetLanguages', function (languages) {
            //     // Verifica se ci sono lingue disponibili
            //     if (languages.length > 0) {
            //         languages.forEach(function (language) {
            //             $('#languageDropdownMenu').append(
            //                 $('<li></li>')
            //                     .addClass('dropdown-item')
            //                     .attr('href', '#')
            //                     .attr('onclick', 'changeLanguage("' + language.Code + '")')
            //                     .text(language.Name)
            //             );
            //         });
            //     } else {
            //         $('#languageDropdownMenu').append('<a class="dropdown-item" href="#">No languages available</a>');
            //     }
            // }).fail(function () {
            //     $('#languageDropdownMenu').append('<a class="dropdown-item" href="#">Error loading languages</a>');
            // });

            // Modale di registrazione se necessario
            var showRegisterModal = '@(ViewBag.ShowRegisterModal != null && (bool)ViewBag.ShowRegisterModal)';
            if (showRegisterModal === 'True') {
                $('#registerModal').modal('show');
            }

            // Reset dei messaggi nel modale di registrazione
            $('#registerModal').on('hidden.bs.modal', function () {
                $('#registrationMessage').text('');
                $('#usernameInUseMessage').text('');
                $('#newPassword').removeClass('is-invalid');
                $('#registerButton').prop('disabled', false);
            });

            // Controllo della validità della password durante l'inserimento
            $('#newPassword').on('input', function () {
                var password = $(this).val();
                if (/\s/.test(password)) {
                    $(this).addClass('is-invalid');
                    $('.invalid-feedback').text('@(currentCulture == "it" ? "La password non può contenere spazi." : "Password cannot contain spaces.")');
                    $('#registerButton').prop('disabled', true);
                } else {
                    $(this).removeClass('is-invalid');
                    $('#registerButton').prop('disabled', false);
                }
            });

            // Funzione per cambiare la lingua
            window.changeLanguage = function (lang) {
                const urlParams = new URLSearchParams(window.location.search);
                urlParams.set('culture', lang);
                window.location.search = urlParams.toString();
            };
        });
    </script>
</body>
</html>


