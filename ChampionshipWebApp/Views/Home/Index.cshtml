@model List<Championship.Team>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Team List</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1 class="mt-5 text-center">Football League System</h1>

        <div class="d-flex justify-content-center mt-5">
            <a href="/AddTeams.html" class="btn btn-primary btn-lg me-3">Add Teams</a>
            <a href="/Teams/ViewCalendar" class="btn btn-secondary btn-lg">View Calendar</a>
        </div>

        @if (Model != null && Model.Count > 0)
        {
            <h2 class="mt-5">List of Teams</h2>
            <table class="table mt-3">
                <thead>
                    <tr>
                        <th>Squad Name</th>
                        <th>Foundation Year</th>
                        <th>City</th>
                        <th>Color of Club</th>
                        <th>Stadium Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var team in Model)
                    {
                        <tr>
                            <td>@team.SquadName</td>
                            <td>@team.FondationYear</td>
                            <td>@team.City</td>
                            <td>@team.ColorOfClub</td>
                            <td>@team.StadiumName</td>
                            <td>
                                <button class="btn btn-warning btn-sm" onclick="openEditModal('@team.SquadName', '@team.FondationYear', '@team.City', '@team.ColorOfClub', '@team.StadiumName')">Edit</button>
                                <form action="/Teams/Delete" method="post" style="display:inline;">
                                    <input type="hidden" name="squadName" value="@team.SquadName" />
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No teams have been added yet.</p>
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        function openEditModal(squadName, fondationYear, city, colorOfClub, stadiumName) {
            $('#EditSquadName').val(squadName);
            $('#EditFondationYear').val(fondationYear);
            $('#EditCity').val(city);
            $('#EditColorOfClub').val(colorOfClub);
            $('#EditStadiumName').val(stadiumName);
            $('#editModal').modal('show');
        }
    </script>
</body>
</html>
