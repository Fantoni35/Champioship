<h2 class="mt-5 text-center">Football League Calendar</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-warning text-center">
        @ViewBag.Message
    </div>
}

else
{
    int matchdayCounter = 1;
    <div class="d-flex justify-content-start">
        <a href="/" class="btn btn-primary row-sm-auto">Back To Home</a>
    </div>

    <div class="text-center mb-4">
        <form asp-action="Rankings" asp-controller="Teams" method="post">
            <button type="submit" class="btn btn-primary">View Rankings</button>
        </form>
    </div>

    @foreach (var day in Model)
    {
        <div class="card mb-3 shadow-sm">
            <div class="card-header bg-dark text-white">
                Matchday @matchdayCounter
            </div>
            <div class="card-body">
                <table class="table table-bordered table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>Home Team</th>
                            <th>Away Team</th>
                            <th>Date</th>
                            <th>Stadium</th>
                            <th>City</th>
                            <th>Insert/Edit Result</th>
                            <th>Result</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var match in day)
                        {
                            <tr>
                                <td>@match.HomeTeam.SquadName</td>
                                <td>@match.AwayTeam.SquadName</td>
                                <td>@match.MatchDate.ToShortDateString()</td>
                                <td>@match.StadiumName</td>
                                <td>@match.City</td>
                                <td>
                                    @if (match.EditMode == true || match.Result == null)
                                    {
                                        <form asp-action="SubmitResult" asp-controller="Teams" method="post">
                                            <input type="hidden" name="matchId" value="@match.Id" />
                                            <input type="hidden" name="editMode" value="true" />
                                            <select name="homeTeamScore">
                                                @for (int i = 0; i <= 10; i++)
                                                {
                                                    if (match.Result != null && match.Result.HomeTeamScore == i)
                                                    {
                                                        <option value="@i" selected>@i</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@i">@i</option>
                                                    }
                                                }
                                            </select>

                                            <select name="awayTeamScore">
                                                @for (int i = 0; i <= 10; i++)
                                                {
                                                    if (match.Result != null && match.Result.AwayTeamScore == i)
                                                    {
                                                        <option value="@i" selected>@i</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@i">@i</option>
                                                    }
                                                }
                                            </select>

                                            <button type="submit" class="btn btn-success btn-sm">Submit</button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form asp-action="EditResult" asp-controller="Teams" method="post">
                                            <input type="hidden" name="matchId" value="@match.Id" />
                                            <button type="submit" class="btn btn-primary btn-sm">Edit Result</button>
                                        </form>
                                    }
                                </td>
                                <td>
                                    @if (match.Result != null)
                                    {
                                        <span class="badge bg-success">
                                            @($"{match.Result.HomeTeamScore} - {match.Result.AwayTeamScore}")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Not Played</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        matchdayCounter++;
    }
}
