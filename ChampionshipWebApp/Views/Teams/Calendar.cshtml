@model List<List<Championship.Match>>
@using ChampionshipWebApp.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Calendar</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1 class="mt-5 text-center">Football League Calendar</h1>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-warning mt-3">
                @ViewBag.Message
            </div>
        }

        @if (Model != null && Model.Count > 0)
        {
            <h2 class="mt-5">Calendar</h2>
            @for (int i = 0; i < Model.Count; i++)
            {
                <h3 class="mt-3">Matchday @(i + 1)</h3>
                <table class="table mt-3">
                    <thead>
                        <tr>
                            <th>Home Team</th>
                            <th>Away Team</th>
                            <th>Date</th>
                            <th>Stadium</th>
                            <th>City</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var match in Model[i])
                        {
                            <tr>
                                <td>@match.HomeTeam.SquadName</td>
                                <td>@match.AwayTeam.SquadName</td>
                                <td>@match.MatchDate.ToShortDateString()</td>
                                <td>@match.StadiumName</td>
                                <td>@match.City</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        }
        else
        {
            <p>No matches scheduled.</p>
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
