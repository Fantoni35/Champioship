@model List<KeyValuePair<Championship.Team, int>>

<div class="container">
    <h1 class="mt-5 text-center">League Rankings</h1>

    @if (Model != null && Model.Count > 0)
    {
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th>Position</th>
                    <th>Team</th>
                    <th>Points</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model[i].Key.SquadName</td>
                        <td>@Model[i].Value</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-center">No rankings available. Please generate match results first.</p>
    }
</div>



